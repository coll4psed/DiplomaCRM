<MudDialog>
    <DialogContent>
        Вы уверены, что хотите удалить?
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Нет</MudButton>
        <MudButton Color="Color.Error" OnClick="Submit">Да</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}